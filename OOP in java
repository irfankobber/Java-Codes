		System.out.println(myCar.make);
		System.out.println(myCar.color);
		myCar.drive();
		myCar.brake();
		
		myCar2.color="Green";
		System.out.println(myCar2.model);
		System.out.println(myCar2.make);
		System.out.println(myCar2.color);

	     
	}

public class Car {
	String make = "Chevrolet";
	String model ="Corvette";
